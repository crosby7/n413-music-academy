{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"layout": {
			"contentSize": "645px",
			"wideSize": "1340px"
		},
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#0b294b"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#3f6d86"
				},
				{
					"name": "Background",
					"slug": "background",
					"color": "#d6dcdc"
				},
				{
					"name": "Text",
					"slug": "text",
					"color": "#333333"
				}
			]
		}
	},

	"styles": {
		"color": {
			"background": "var:preset|color|background"
		},
		"spacing": {
			"blockGap": "1.2rem",
			"padding": {
				"left": "50px",
				"right": "50px"
			}
		},
		"blocks": {
			"core/group": {
				"spacing": {
					"padding": {
						"top": "20px",
						"right": "20px",
						"bottom": "20px",
						"left": "20px"
					}
				}
			},
			"core/image": {
				"spacing": {
					"margin": {
						"top": "10px",
						"bottom": "10px"
					}
				}
			}
		},
		"elements": {
			"heading": {
				"color": {
					"text": "var:preset|color|primary"
				}
			}
		}
	}
}
